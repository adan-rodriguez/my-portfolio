---

<section id="projects">
  <section class="important_projects_container">
    <h2>Proyecto destacado</h2>
    <ul class="important_projects">
      {
        importantProjects.map(
          ({ name, description, image, technologies, link, github }) => (
            <ImportantProject
              name={name}
              description={description}
              image={image}
              technologies={technologies}
              link={link}
              github={github}
            />
          )
        )
      }
    </ul>
  </section>

  <section class="minor_projects_container">
    <h2>Otros proyectos</h2>
    <ul class="minor_projects">
      {
        minorProjects.map(
          ({ name, description, image, technologies, link, github }) => (
            <MinorProject
              name={name}
              description={description}
              image={image}
              technologies={technologies}
              link={link}
              github={github}
            />
          )
        )
      }
    </ul>
  </section>
</section>

<style>
  .important_projects_container,
  .minor_projects_container {
    padding: 4rem 0;
  }

  h2 {
    width: fit-content;
    font-weight: 900;
    font-size: 2rem;
    background-image: linear-gradient(
      to right,
      var(--color-primary),
      var(--text-color-primary)
    );
    color: transparent;
    -webkit-background-clip: text;
    margin-bottom: 2rem;
  }

  .important_projects {
    display: flex;
    row-gap: 2rem;
  }

  .minor_projects {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    column-gap: 2rem;
    row-gap: 2rem;

    &:has(.minor_project:hover) {
      & .minor_project:not(:hover) {
        filter: brightness(0.45);
      }
    }
  }
</style>
