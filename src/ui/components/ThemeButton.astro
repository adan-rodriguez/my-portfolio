---
import Moon from "../icons/Moon.astro";
import Sun from "../icons/Sun.astro";
---

<button id="theme-btn" aria-label="Cambiar tema">
  <Sun />
  <Moon />
</button>

<style>
  #theme-btn {
    z-index: 10;
    transition: scale 0.3s;
    margin-right: 0.5rem;

    &:is(:hover, :focus-visible) {
      scale: 1.1;
    }
  }
</style>
