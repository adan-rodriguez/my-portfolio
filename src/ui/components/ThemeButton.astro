---
import Moon from "../icons/Moon.astro";
import Sun from "../icons/Sun.astro";
---

<button id="theme-btn">
  <script is:inline>
    document.currentScript.parentElement.setAttribute(
      "aria-label",
      `Cambiar a modo ${document.documentElement.dataset.theme === "dark" ? "claro" : "oscuro"}`
    );
  </script>
  <Sun class="sun" />
  <Moon />
</button>

<style>
  @keyframes rotate {
    to {
      rotate: 360deg;
    }
  }
</style>
