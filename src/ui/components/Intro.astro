<style>
  section {
    /* background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)),
      url(images/una-taza-de-javascript.webp);
    background-size: cover;
    background-position: center;
    background-attachment: fixed; */
    min-height: calc(100dvh - 56px);
    display: flex;
    align-items: center;
  }

  .intro {
    width: 100%;
    padding: 2rem 0;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    gap: 2rem;
    align-items: center;
  }

  .data {
    display: flex;
    flex-direction: column;
    align-items: center;
    row-gap: 1rem;
  }

  .name {
    font-size: 1.5rem;
    font-weight: 700;
    text-align: center;
  }

  .label {
    font-size: 2.5rem;
    font-weight: 900;
    text-align: center;
    background-image: linear-gradient(
      to right,
      var(--color-primary),
      var(--text-color-primary)
    );
    -webkit-text-fill-color: transparent;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
  }

  .about-me {
    font-size: 0.875rem;
    color: var(--text-color-secondary);
    max-width: 50ch;
    text-align: center;
    display: flex;
    flex-direction: column;
    row-gap: 0.5rem;
    font-weight: 500;
  }

  .about-me span {
    font-weight: 800;
    color: var(--color-primary);
  }

  .argentina-flag {
    display: inline-block;
    vertical-align: middle;
  }

  .skills {
    background-image: linear-gradient(var(--color-secondary), black);
    border-radius: 1rem;
    padding: 10px;
  }

  .skill {
    height: 2rem;
    animation: skill 1.5s linear infinite;
    margin-left: 0.5rem;
    display: inline-block;
  }

  @keyframes skill {
    0% {
      transform: translateX(0px);
    }
    25% {
      transform: translateX(-5px);
    }
    50% {
      transform: translateX(0px);
    }
    75% {
      transform: translateX(5px);
    }
    100% {
      transform: translateX(0px);
    }
  }

  .skill--nextjs {
    margin-left: 0.25rem;
  }

  .social {
    display: flex;
    column-gap: 10px;
  }

  .social a {
    display: flex;
  }

  .cv {
    background-image: linear-gradient(var(--color-primary), black);
    padding: 0.5rem 3rem;
    border-radius: 1rem;
    transition: all 0.3s;
    color: rgb(248 250 252);
  }

  .cv:hover {
    scale: 1.025;
    filter: contrast(1.1);
  }

  .me-img {
    width: 300px;
    border-radius: 100%;
    background-image: radial-gradient(black 40%, var(--color-primary));
  }

  .me-img {
    animation: me-img 4s linear infinite;
  }

  @keyframes me-img {
    0% {
      transform: translateX(-10px) translateY(0px);
    }
    25% {
      transform: translateX(0px) translateY(10px);
    }
    50% {
      transform: translateX(10px) translateY(0px);
    }
    75% {
      transform: translateX(0px) translateY(-10px);
    }
    100% {
      transform: translateX(-10px) translateY(0px);
    }
  }

  @media (width >= 768px) {
    @keyframes animation-mi-imagen {
      0% {
        transform: translateX(-20px) translateY(0px);
      }
      25% {
        transform: translateX(-10px) translateY(10px);
      }
      50% {
        transform: translateX(0px) translateY(0px);
      }
      75% {
        transform: translateX(-10px) translateY(-10px);
      }
      100% {
        transform: translateX(-20px) translateY(0px);
      }
    }
  }

  @media (width >= 768px) {
    .intro {
      flex-direction: row;
      justify-content: space-between;
    }

    .data {
      align-items: flex-start;
    }

    .label {
      text-align: start;
    }

    .about-me {
      text-align: start;
    }
  }

  @media (prefers-reduced-motion) {
    section {
      background-attachment: scroll;
    }

    .skill {
      animation: none;
    }

    .me-img {
      animation: none;
    }
  }
</style>
