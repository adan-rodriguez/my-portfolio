---
import Badge from "./Badge.astro";

const { name, description, image, technologies, link, github } = Astro.props;
---

<li>
  <article class="card">
    <span
      aria-hidden="true"
      class="border-effect hidden absolute inset-[-1000%] animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#0369a1_0%,#000000_50%,#0369a1_100%)] -z-10"
    ></span>
    <div class="card__image_container">
      <img
        class="card__image"
        src={image}
        alt={`Portada de ${name}`}
        loading="lazy"
      />
    </div>
    <div class="card__info">
      <div class="card__info_header">
        <h3 class="card__name">{name}</h3>
        <ul
          class="card__badges"
          aria-label="Tecnologías utilizadas en el proyecto"
        >
          {
            technologies.map(({ name, image, color }) => (
              <Badge name={name} image={image} color={color} />
            ))
          }
        </ul>
        <p class="card__description">{description}</p>
      </div>
      <div class="card__buttons">
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="card__button"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path
              d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"
            ></path><path
              d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"
            ></path></svg
          > Deploy</a
        >
        {
          github && (
            <a
              href="https://github.com/adan-rodriguez/el-villanense-next-js"
              target="_blank"
              rel="noopener noreferrer"
              class="card__button text-"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <>
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
                </>
              </svg>{" "}
              Código
            </a>
          )
        }
      </div>
    </div>
  </article>
</li>

<style>
  li {
    width: 100%;
  }

  .card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: 1px solid var(--color-secondary);
    border-radius: 1rem;
    overflow: clip;
    position: relative;
    background-color: var(--color-secondary);
  }

  .card::after {
    /* content: ""; */
    /* position: absolute;
    width: 100%;
    height: 100%;
    background-image: conic-gradient(
      var(--text-color-primary) 20deg,
      transparent 80deg
    );
    animation: rotar 5s ease-in-out infinite;
    z-index: -1; */
  }

  .card:hover::after {
    /* content: '<span class="absolute inset-[-1000%] animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%, #51E4B8_0%, #21554E_50%, #51E4B8_100%)]"></span>'; */
  }

  .card:hover {
    overflow-clip-margin: 3px;

    & .border-effect {
      display: block;
    }
  }

  @keyframes rotar {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(-360deg);
    }
  }

  @media (width >= 576px) {
    .card {
      flex-direction: row;
    }
  }

  .card__image_container {
    width: 100%;
    aspect-ratio: 3/2;
    overflow: hidden;
    align-self: stretch;
    border-radius: 1rem 1rem 0 0;
  }

  .card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: left;
    transition: scale 0.5s;
  }

  .card:hover .card__image {
    scale: 1.05;
  }

  @media (width >= 576px) {
    .card__image_container {
      width: 50%;
      border-radius: 1rem 0 0 1rem;
    }
  }

  .card__info {
    width: 100%;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    row-gap: 20px;
    background-image: linear-gradient(to top, black, var(--color-secondary));
    align-self: stretch;
    border-radius: 0 0 1rem 1rem;
  }

  @media (width >= 576px) {
    .card__info {
      width: 50%;
      background-image: linear-gradient(to left, black, var(--color-secondary));
      border-radius: 0 1rem 1rem 0;
    }
  }

  .card__info_header {
    display: flex;
    flex-direction: column;
    row-gap: 1rem;
  }

  .card__name {
    font-size: 1.5rem;
    font-weight: 700;
    text-wrap: balance;
    color: rgb(248 250 252);
  }

  .card__badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .card__description {
    font-size: 0.875rem;
    color: rgb(203 213 225);
    text-wrap: pretty;
  }

  .card__buttons {
    display: flex;
  }

  .card__button {
    display: flex;
    align-items: center;
    column-gap: 0.25rem;
    padding: 0.25rem 1.25rem;
    border: 1px solid rgb(203 213 225);
    border-radius: 0.25rem;
    background-color: rgb(55 65 81);
    color: rgb(248 250 252);
    transition:
      background-color 0.3s,
      scale 0.3s,
      translate 0s;
    font-size: 0.825rem;

    &:hover {
      background-color: var(--color-primary);
      scale: 1.05;
    }

    &:active {
      translate: 0 0.125rem;
    }
  }

  .card__button {
    & svg {
      width: 0.825rem;
      height: 0.825rem;
    }
  }
</style>
