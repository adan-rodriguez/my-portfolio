---
const { name, image, color } = Astro.props;
---

<li style={`background-color: ${color.bg}; color: ${color.text}`}>
  <img src={image} alt={`Logo de ${name}`} aria-hidden="true" loading="lazy" />
  {name}
</li>

<style>
  li {
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    display: flex;
    column-gap: 0.5rem;
    align-items: center;
    text-wrap: nowrap;
    font-size: 0.75rem;

    img {
      width: 16px;
      aspect-ratio: 1/1;
    }
  }
</style>
